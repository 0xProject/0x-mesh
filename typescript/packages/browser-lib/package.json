{
    "name": "@0x/mesh-browser-lib",
    "version": "1.0.0",
    "description": "TypeScript and JavaScript bindings for running Mesh directly in the browser.",
    "main": "./lib/index.js",
    "types": "./lib/index.d.ts",
    "license": "Apache-2.0",
    "scripts": {
        "build": "node --max_old_space_size=4096 ./node_modules/.bin/tsc -b",
        "docs:md": "ts-doc-gen --sourceDir=./src --output=${npm_package_config_docsPath}",
        "test": "mocha --require source-map-support/register --require make-promises-safe lib/test/**/*_test.js --timeout 200000 --exit",
        "lint": "tslint --format stylish --project ."
    },
    "config": {
        "docsPath": "../docs/browser"
    },
    "dependencies": {
        "@0x/order-utils": "^10.1.1",
        "@0x/types": "^3.1.1",
        "@0x/utils": "^5.2.0",
        "base64-arraybuffer": "^0.2.0",
        "browserfs": "^1.4.3",
        "ethereum-types": "^3.1.0"
    },
    "devDependencies": {
        "@0x/ts-doc-gen": "^0.0.16",
        "chai": "^4.2.0",
        "chai-as-promised": "^7.1.1",
        "chai-bignumber": "^3.0.0",
        "dirty-chai": "^2.0.1",
        "mocha": "^7.0.1",
        "typescript": "^3.5.3"
    }
}
