{
    "name": "root",
    "private": true,
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "wsrun": "wsrun",
        "build": "wsrun --stages --fast-exit --exclude-missing build $PKG ",
        "build:ts": "tsc -b",
        "watch:ts": "tsc -b -w",
        "lint": "wsrun lint $PKG",
        "docs:md": "wsrun docs:md --fast-exit --exclude-missing $PKG",
        "test": "wsrun --fast-exit --exclude-missing test $PKG "
    },
    "devDependencies": {
        "@0x/tslint-config": "^4.0.0",
        "@types/base64-arraybuffer": "^0.1.0",
        "ignore-loader": "^0.1.2",
        "prettier": "^1.19.1",
        "ts-loader": "^6.2.1",
        "tslint": "5.11.0",
        "typescript": "^3.5.3",
        "webpack": "^4.41.5",
        "webpack-cli": "^3.3.10",
        "wsrun": "^5.2.0"
    }
}
