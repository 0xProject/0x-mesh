{
    "name": "0x-mesh",
    "version": "0.0.1",
    "engines": {
        "node": ">=11"
    },
    "workspaces": {
        "packages": ["packages/*"],
        "nohoist": [
            "*/clean-webpack-plugin", 
            "*/clean-webpack-plugin/**",
            "*/html-webpack-plugin", 
            "*/html-webpack-plugin/**"
        ]
    }, 
    "scripts": {
        "wsrun": "wsrun",
        "build": "wsrun --stages --fast-exit --exclude-missing build $PKG",
        "build:ts": "tsc -b",
        "watch:ts": "tsc -b -w",
        "clean": "wsrun --fast-exit --exclude-missing clean $PKG",
        "docs:md": "wsrun --fast-exit --exclude-missing docs:md $PKG",
        "lint": "wsrun lint $PKG",
        "test": "wsrun --fast-exit --exclude-missing test $PKG "
    },
    "description": "A peer-to-peer network for sharing orders",
    "main": "index.js",
    "repository": "git@github.com:0xProject/0x-mesh.git",
    "private": true,
    "devDependencies": {
        "@0x/tslint-config": "^4.0.0",
        "@types/base64-arraybuffer": "^0.1.0",
        "es6-promise": "^4.2.6",
        "ignore-loader": "^0.1.2",
        "isomorphic-fetch": "^2.2.1",
        "qunit-puppeteer": "^1.0.1",
        "prettier": "^1.19.1",
        "ts-loader": "^6.2.1",
        "tslint": "5.11.0",
        "typescript": "^3.5.3",
        "webpack": "^4.41.5",
        "webpack-cli": "^3.3.10",
        "wrtc": "0.4.1",
        "wsrun": "^5.2.0"
    }
}
