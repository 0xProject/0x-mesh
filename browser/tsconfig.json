{
    "compilerOptions": {
        "outDir": "lib",
        "rootDir": "./ts",
        "resolveJsonModule": true,
        "module": "commonjs",
        "target": "es5",
        "lib": ["es2017", "dom"],
        "experimentalDecorators": true,
        "downlevelIteration": true,
        "noImplicitReturns": true,
        "pretty": true,
        "skipLibCheck": true,
        "declaration": true,
        "typeRoots": ["node_modules/@0x/typescript-typings/types", "node_modules/@types"],
        "strict": true
    },
    "include": ["./ts/**/*"],
    "exclude": ["./conversion-tests/**/*"]
}
